@using EntityLayer.Concrete
@model List<Message>
@{
    ViewBag.Title = "Drafts";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<html>

<body class="hold-transition sidebar-mini">

    <!-- Content Wrapper. Contains page content -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Mesaj Sayfası</h1>
                </div>

            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            @Html.Action("ContactPartial", "Contact")
            <!-- /.col -->
            <div class="col-md-9">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Taslaklar</h3>
                        <div class="card-tools">
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control" placeholder="Mail Kutusunda Ara">
                                <div class="input-group-append">
                                    <div class="btn btn-primary">
                                        <i class="fas fa-search"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-tools -->
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body p-0">
                        
                        <div class="table-responsive mailbox-messages">
                            <table class="table table-hover table-striped">
                                <tbody>
                                    @if (Model.Count == 0)
                                    {
                                        <tr>
                                            <td class="mailbox-read-message">
                                                Taslak kutunuz boş
                                            </td>
                                        </tr>
                                    }
                                    @foreach (var item in Model)
                                    {


                                        <tr>
                                            <td>
                                                <div class="icheck-primary">
                                                    <input type="checkbox" value="" id="check1">
                                                    <label for="check1"></label>
                                                </div>
                                            </td>

                                            <td class="mailbox-star"><a href="/Message/NewMessage/@item.MessageId"><i class="fas fa-star text-warning"></i></a></td>
                                            <td class="mailbox-name"><a href="/Message/NewMessage/@item.MessageId">@item.ReceiverMail</a></td>
                                            <td class="mailbox-subject">

                                                <b>@item.MessageSubject</b> -
                                                @if (item.MessageContent.Length >= 30)
                                                {
                                                    @item.MessageContent.Substring(0, 30)<span>...</span>
                                                }
                                                else
                                                {
                                                    @item.MessageContent
                                                }

                                            </td>
                                            <td class="mailbox-attachment"></td>
                                            <td class="mailbox-date">@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
                                            <td><button type="button" class="btn btn-default btn-sm"><i class="far fa-trash-alt"></i></button></td>
                                            <td><button type="button" class="btn btn-default btn-sm"><i class="fas fa-sync-alt"></i></button></td>
                                            <td><button type="button" class="btn btn-default btn-sm"><i class="fas fa-reply"></i></button></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <!-- /.table -->
                        </div>
                        <!-- /.mail-box-messages -->
                    </div>
                    <!-- /.card-body -->
                    
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>

</body>
</html>


